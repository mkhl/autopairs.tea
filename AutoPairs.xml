<?xml version="1.0" encoding="UTF-8"?>
<action-recipes>

	<action id="org.purl.net.mkhl.actions.AutoPairs.Paren" category="actions.text.AutoPairs">
		<class>TEAforEspresso</class>
		<title>Parenthesize Block</title>
		<key-equivalent>control (</key-equivalent>
		<setup>
			<action>selections_to_text</action>
			<options>
				<dict>
					<key>default</key>
					<string><![CDATA[($SELECTED_TEXT)]]></string>
					<key>undo_name</key>
					<string>Parenthesize Block</string>
				</dict>
			</options>
		</setup>
		<syntax-context>sourcecode, sourcecode *</syntax-context>
	</action>

